          </div>
          <div class="form-group">
            <label>날짜</label>
            <input type="text" class="form-control" name="date" value="<%= data.날짜 %>">
          </div>
          <button type="submit" class="btn btn-info mt-2">수정하기</button>
        </form>
      </div>













